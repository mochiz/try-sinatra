<article>
  <header>
    <h1>メモアプリ</h1>
  </header>
  <section>
    <form action="/memos" method="POST" class="form-container">
      <div class="form-items">
        <div class="form-items__item">
          <label>タイトル</label>
          <input type="text" name="title" value='<%= @memo.title %>'>
        </div>
        <div class="form-items__item">
          <label>本文</label>
          <textarea name="body" rows=5><%= @memo.body %></textarea>
        </div>
      </div>
      <div class="form-action">
        <input type="submit" value="保存">
      </div>
    </form>
  </section>
</article>
